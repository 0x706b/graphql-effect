{
   "name": "@graphql-effect/core",
   "version": "0.0.5",
   "private": false,
   "description": "Code-first GraphQL with effect-ts",
   "repository": "git://github.com/0x706b/graphql-effect",
   "license": "MIT",
   "author": "Peter Krol <peter@peterkrol.com>",
   "type": "module",
   "exports": {
      ".": {
         "import": "./dist/index.js",
         "require": "./dist/commonjs/index.js"
      },
      "./": {
         "import": "./dist/",
         "require": "./dist/commonjs/"
      }
   },
   "scripts": {
      "build": "yarn build:esm && yarn build:cjs && ts-node ../../scripts/package.ts && yarn build:postprocess",
      "build:cjs": "ttsc --build ./tsconfig.cjs.json",
      "build:esm": "ttsc --build ./tsconfig.esm.json",
      "build:postprocess": "yarn prettier && yarn sort-package-json ./dist/package.json",
      "build:test": "ttsc --build ./tsconfig.test.json",
      "clean": "rimraf dist tsbuildinfo",
      "clean:test": "rimraf build",
      "lint": "eslint .",
      "prettier": "prettier --write --config ../../.prettierrc.json ./dist",
      "prepublish": "yarn build",
      "publish:package": "yarn version && yarn build && yarn publish dist",
      "test": "yarn clean:test && yarn build:test && jest build/test"
   },
   "dependencies": {
      "@0x706b/convenience-ts": "^0.0.2",
      "fp-ts": "^2.8.2",
      "graphql-tools": "^6.0.18",
      "io-ts": "^2.2.10",
      "ts-toolbelt": "^8.0.3"
   },
   "devDependencies": {
      "@0x706b/ts-transform-cjs-import": "^0.1.8",
      "@0x706b/ts-transform-esm-specifier": "^0.1.14",
      "@effect-ts/core": "^0.0.5",
      "@types/node": "^14.6.0",
      "graphql": "^15.3.0"
   },
   "peerDependencies": {
      "@effect-ts/core": "^0.0.5",
      "graphql": "^15.3.0"
   }
}
