{
   "name": "@graphql-effect/apollo-express-driver",
   "version": "0.0.12",
   "description": "Code-first GraphQL with effect-ts",
   "repository": "git://github.com/0x706b/graphql-effect",
   "license": "MIT",
   "author": "Peter Krol <peter@peterkrol.com>",
   "type": "module",
   "exports": {
      ".": {
         "import": "./dist/index.js",
         "require": "./dist/commonjs/index.js"
      },
      "./": {
         "import": "./dist/",
         "require": "./dist/commonjs/"
      }
   },
   "scripts": {
      "build": "yarn build:esm && yarn build:cjs && yarn build:postprocess",
      "build:cjs": "ttsc --build ./tsconfig.cjs.json",
      "build:esm": "ttsc --build ./tsconfig.esm.json",
      "build:postprocess": "ts-node ../../scripts/package.ts && prettier --write --config ../../.prettierrc.json ./dist && yarn sort-package-json ./dist/package.json",
      "build:test": "ttsc --build ./tsconfig.test.json",
      "clean": "rimraf dist tsbuildinfo",
      "clean:test": "rimraf dist",
      "format": "prettier --write --config ../../.prettierrc.json ./source",
      "lint": "eslint .",
      "prepublish": "yarn build",
      "publish:package": "yarn version --no-git-tag-version && yarn build && yarn publish dist",
      "test": "yarn clean:test && yarn build:test && jest build/test"
   },
   "dependencies": {
      "@0x706b/convenience-ts": "latest",
      "@0x706b/effect-ts-express": "latest",
      "@graphql-effect/core": "latest",
      "apollo-server-express": "^2.17.0",
      "express": "^4.17.1",
      "fp-ts": "^2.8.2",
      "io-ts": "^2.2.10"
   },
   "devDependencies": {
      "@0x706b/ts-transform-fix-esm": "^0.0.11",
      "@effect-ts/core": "^0.0.6",
      "@types/node": "^14.6.2",
      "@zerollup/ts-transform-paths": "^1.7.18",
      "graphql": "^15.3.0"
   },
   "peerDependencies": {
      "@effect-ts/core": "^0.0.6",
      "graphql": "^15.3.0"
   }
}
